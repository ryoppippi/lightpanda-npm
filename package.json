{
  "name": "@ryoppippi/lightpanda-npm",
  "version": "0.0.1",
  "type": "module",
  "packageManager": "pnpm@10.7.0",
  "bin": {
    "lightpanda": "./dist/cli.mjs"
  },
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json",
    "./cli.mjs": "./dist/cli.mjs"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "prepack": "pnpm build",
    "prerelease": "npm run typecheck",
    "release": "bumpp && pnpm publish"
  },
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/node": "^22.14.1",
    "bumpp": "^10.1.0",
    "publint": "^0.3.12",
    "tsdown": "^0.9.1",
    "typescript": "^5",
    "unplugin-unused": "^0.4.4"
  },
  "dependencies": {
    "download-github-release": "^0.3.2",
    "find-cache-directory": "^6.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
